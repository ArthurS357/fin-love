// Configuração do Cliente Prisma
generator client {
  provider = "prisma-client-js"
}

// Configuração do Banco de Dados (Vercel Postgres)
// Se estiver usando SQLite local, troque provider para "sqlite" e remova directUrl
datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Usa o Pool para performance
  directUrl = env("POSTGRES_URL_NON_POOLING") // Usa direta para migrações
}

// --- MODELO DE USUÁRIO ---
model User {
  id               String    @id @default(cuid())
  name             String?
  email            String    @unique
  password         String
  spendingLimit    Decimal   @default(2000)
  savingsGoal      String    @default("Caixinha")
  partnerId        String?   @unique
  
  // Campos de IA (Legado - Mantido para compatibilidade)
  lastAdvice       String?   @db.Text
  lastAdviceDate   DateTime?

  // Campos de Recuperação de Senha
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relações
  partner          User?     @relation("Partner", fields: [partnerId], references: [id])
  partnerOf        User?     @relation("Partner")

  transactions     Transaction[]
  categories       Category[]
  badges           Badge[]
  recurring        RecurringTransaction[]
  monthlyBudgets   MonthlyBudget[]
  aiChats          AiChat[]  // Relação com o novo histórico
  investments      Investment[]

  // Adicione estas linhas:
  sentMessages     PartnerMessage[] @relation("SentMessages")
  receivedMessages PartnerMessage[] @relation("ReceivedMessages")

  @@index([email]) // Login rápido
}

// --- MODELO DE TRANSAÇÃO ---
model Transaction {
  id                 String   @id @default(cuid())
  description        String
  amount             Decimal
  type               String   // INCOME, EXPENSE, INVESTMENT
  category           String
  date               DateTime
  paymentMethod      String?
  installments       Int?
  currentInstallment Int?
  isPaid             Boolean  @default(true)
  
  // Identificador único do grupo de parcelas
  installmentId      String?
  
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([userId, date]) // Índice composto: Busca por usuário + data é instantânea
  @@index([userId, type]) // Opcional: Ajuda nos filtros de "Entradas vs Saídas"
  @@index([installmentId]) // Para deletar/buscar todas as parcelas rápido
}

// --- MODELO DE TRANSAÇÃO RECORRENTE ---
model RecurringTransaction {
  id          String   @id @default(cuid())
  description String
  amount      Decimal
  type        String
  category    String
  frequency   String
  dayOfMonth  Int?
  nextRun     DateTime
  active      Boolean  @default(true)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Otimiza o CRON job
  @@index([active, nextRun])
}

// --- MODELO DE CATEGORIA ---
model Category {
  id        String   @id @default(cuid())
  name      String
  color     String?
  icon      String?
  type      String   @default("EXPENSE")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

// --- MODELO DE CONQUISTAS (BADGES) ---
model Badge {
  id          String   @id @default(cuid())
  code        String
  name        String
  description String
  icon        String
  earnedAt    DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// --- MODELO: PLANILHA DE PLANEJAMENTO ---
model MonthlyBudget {
  id        String   @id @default(cuid())
  userId    String
  month     Int      // 0-11
  year      Int
  
  // Armazena a planilha completa (entradas, fixos, diversos) via JSON
  data      Json     
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Garante apenas um planejamento por mês/ano por usuário
  @@unique([userId, month, year]) 
  @@index([userId, month, year])
}

// --- NOVO MODELO: HISTÓRICO DE CHAT DA IA ---
model AiChat {
  id        String   @id @default(cuid())
  userId    String
  role      String   // "user" | "model"
  message   String   @db.Text
  context   String   @default("GENERAL") // Ex: "GENERAL", "PLANNING_0_2026"
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Índices para busca rápida do histórico
  @@index([userId, context])
  @@index([createdAt])
}

model Investment {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name          String   // Ex: "Bitcoin", "CDB Nubank"
  category      String   // Ex: "CRIPTO", "RENDA_FIXA", "ACOES", "FII"
  
  investedAmount Float   // Quanto você tirou do bolso (Preço Médio)
  currentAmount  Float   // Quanto vale hoje (atualizável)
  
  // Opcional: Linkar com a transação original do extrato
  originTransactionId String? 
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

model PartnerMessage {
  id         String   @id @default(uuid())
  senderId   String
  receiverId String
  
  message    String   // O texto ou emoji
  category   String   // LOVE, FINANCE, ALERT
  read       Boolean  @default(false)
  
  createdAt  DateTime @default(now())

  // Relações
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])

  @@index([receiverId])
}