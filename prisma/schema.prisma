generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Usa o Pool para performance
  directUrl = env("POSTGRES_URL_NON_POOLING") // Usa direta para migrações
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String   
  name          String?
  spendingLimit Decimal? @default(0) @db.Decimal(10, 2)
  savingsGoal   String?  @default("Caixinha dos Sonhos")
  lastAdvice     String?   @db.Text // Use Text para suportar textos longos
  lastAdviceDate DateTime?

  partnerId     String?  @unique
  partner       User?    @relation("Couple", fields: [partnerId], references: [id])
  partnerOf     User?    @relation("Couple")

  transactions          Transaction[]
  categories            Category[]              // Relacionamento com Categorias
  recurringTransactions RecurringTransaction[]  // Relacionamento com Recorrência (Assinaturas)
  badges        Badge[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Category {
  id          String   @id @default(cuid())
  name        String
  color       String   
  icon        String   
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@unique([userId, name])
}

model Badge {
  id          String   @id @default(cuid())
  code        String   // Ex: 'FIRST_INVESTMENT'
  name        String
  description String
  icon        String   // Emoji ou nome do ícone
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  awardedAt   DateTime @default(now())
}

model RecurringTransaction {
  id          String   @id @default(cuid())
  description String
  amount      Float
  type        String   
  category    String
  
  frequency   String   @default("MONTHLY")
  nextRun     DateTime 
  active      Boolean  @default(true)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

model Transaction {
  id          String   @id @default(uuid())
  
  // OTIMIZAÇÃO: Decimal para evitar erros de centavos
  amount      Decimal  @db.Decimal(10, 2)
  description String
  category    String
  date        DateTime @default(now())
  type        String   
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // PERFORMANCE: Índice Composto para queries "Minhas transações recentes"
  @@index([userId, date(sort: Desc)])
}